
@{
    ViewData["Title"] = "Payment Confirmed";
}

<div class="container text-center mt-5 rounded border p-3">
    <div class="alert alert-success">
        <h2 class="text-success">✅ Payment Successful!</h2>
    </div>
    <p>Thank you for your purchase. A receipt has been sent to your email.</p>
    <a href="/" class="btn btn-primary">Return to Home</a>
    <!-- Optionnel : Afficher des détails depuis TempData -->
    @if (TempData["PaymentId"] != null)
    {
        <div class="mt-3">
            <small class="text-muted">
                Transaction ID: @TempData["PaymentId"]
            </small>
        </div>
    }
</div>

